<div style="display: flex; justify-content: space-between; align-items: baseline;">
    <h1>Todo app</h1>  
    <label class="logoutLblPos">
        <a style="font-size: 20px;" href="/user/logout">Logout</a>
    </label>
</div>
<form action="/todo/add" method="POST">
  <div class="input-field col s12">
    <input type="text" id="first_name" class="validate" name="title" placeholder="Title" required>
    <label for="first_name">Title</label>
  </div>
  <div class="input-field col s12">
    <textarea id="textarea1" class="materialize-textarea validate" name="task" placeholder="Content" required></textarea>
    <label for="textarea1">Content</label>
    
  </div>
  <div class="input-field col s12">
    <input id="date-picker" type="date" class="datepicker" name="date" required />
    <label for="date-picker">Select date</label>
  </div>
  <div class="input-field col s12">
    <input id="time-picker" type="text" class="timepicker" name="time" required>
    <label for="time-picker">Set time</label>
  </div>
  <div class="col s12">
      <button class="btn waves-effect waves-light" type="submit" name="submit">
          <i class="material-icons ">Add Task</i>
      </button>
  </div>
  
</form>
<table class="striped">
    <thead>
        <tr>
            <th data-field="id">Title</th>
            <th data-field="name">Content</th>
            <th data-field="date">Date</th>
            <th data-field="time">Time</th>
            <th data-field="action">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% data.forEach(function(dataList){%>
            <tr>
                <td><%= dataList.titles %></td>
                <td><%= dataList.body %></td>
                <td><%= dataList.date %></td>
                <td><%= dataList.time %></td>
                <td><a href="/todo/edit/<%= dataList.id %>">Edit</a> | <a href="/todo/delete/<%= dataList.id %>">Delete</a> </td>
            </tr>
        <%})%>
        
    </tbody>
</table>

<script>
    setTimeout(() => {
        $(document).ready(function(){
            $('.timepicker').timepicker();
          });
      }, 1000);
</script>
